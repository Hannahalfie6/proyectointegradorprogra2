<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < productos.lenght; i++) { %>
				<div class="col-12">
					<article class="product-box">
						<h2>Nombre: <%= productos[i].nombre %></h2>
						<img src="<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
						<p>Descripcion: <%= productos[i].descripcion %> </p>
						<p>Comentarios: <%= productos[i].comentarios.lenght %> </p>
					</article>
				</div>	
			<% } %>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>