<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include("./partials/headerLogueado",{usuario: locals.user}) %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%=usuario.fotoUsuario %> " alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.email %></h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li> Email: <%= usuario.email %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% if( productos && productos.length > 0) { %>
				<% for(let i=0; i<productos.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/productos/detalle/<%= productos[i].id %>">
								<figure class="product-box_image">
									<img src="<%= productos[i].imagen %>" alt="<%= productos[i].nombe %> ">
								</figure>
								<article class="product-box_data">
									<h2><%= productos[i].nombre %></h2>
									<p>D<%= productos[i].descripcion %></p>
									<p>Comentarios: </p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>