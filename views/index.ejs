<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
 <%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">PRODUCTOS</h2>
			</div>
			<!-- Show the "ultimos" products -->
			 <% for( let i = 0; i < data.productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= i %>">
							<figure class="product-box_image">
								<img src="<%=data.productos[i].imagen%>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= data.productos[i].nombre %></h2>
								<p><%= data.productos[i].descripcion %></p>
								<p>Comentarios: <%= data.productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>