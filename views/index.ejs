<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
 <%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include("./partials/headerLogueado",{usuario: locals.user}) %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">PRODUCTOS</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% if (products && products.length > 0) { %>
				<% products.forEach(function(prod) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detalle/<%= prod.id %>">
								<figure class="product-box_image">
									<!-- suponiendo que guardÃ¡s imagenes en /public/imgs -->
									<img src="<%= prod.imagen %>" alt="<%= prod.nombre %>">
								</figure>
								<article class="product-box_data">
									<h2><%= prod.nombre %></h2>
									<p><%= prod.descripcion %></p>
									<p>Comentarios: 
										<%= (prod.comentarios) ? prod.comentarios.length : 0 %>
									</p>
									<p>Cargado por: 
										<a href="/users/profile/<%= prod.usuario ? prod.usuario.id : '' %>">
											<%= prod.usuario ? (prod.usuario.username || prod.usuario.email) : 'Usuario' %>
										</a>
									</p>
								</article>
							</a>
						</section>
					</div>
				<% }); %>
			<% } else { %>
				<div class="col-12">
					<p>No hay productos cargados.</p>
				</div>
			<% } %>

		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>