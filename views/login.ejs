<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include("./partials/headerLogueado",{usuario: locals.user}) %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->

	<form class="login-form" method="POST" action="/users/login">
		<label>Email: </label>
		<div>
			<input class="campo" placeholder="Ingrese su usuario" type="text" name="usuario" required>
		</div> 
		<label>Contraseña: </label>
		<div>
			<input class="campo" placeholder="Contraseña" type="password" name="contrasena" required> 
		</div>
		<div>
			<label> Acepto términos y condiciones: </label> 
			<input type="checkbox" name="recordarme" id="" required>
		</div>
		<div>
			<button type="submit"> Ingresar </button>
		</div>
	</form>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>