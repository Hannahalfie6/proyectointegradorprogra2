<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->

	<form class="login-form" method="get" action="/">
		<label>Nombre de usuario: </label>
		<div>
			<input class="campo" placeholder="Ingrese su usuario" type="text" name="usuario" required>
		</div> 
		<label>Contraseña: </label>
		<div>
			<input class="campo" placeholder="Contraseña" type="password" name="contraseña" required> 
		</div>
		<div>
			<label> Acepto términos y condiciones: </label>
			<input type="checkbox" name="recordarme" id="">
		</div>
		<div>
			<button type="submit"> Ingresar </button>
		</div>
	</form>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>